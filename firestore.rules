rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the organization
    function isOrganizationOwner(organizationId) {
      return isAuthenticated() && request.auth.uid == organizationId;
    }

    // Organizations collection - users can only read/write their own organization
    match /organizations/{organizationId} {
      allow read, write: if isOrganizationOwner(organizationId);
    }

    // Subcollections under organizations - only organization owners can access
    match /organizations/{organizationId}/{collection=**} {
      allow read, write: if isOrganizationOwner(organizationId);
    }
  }
}