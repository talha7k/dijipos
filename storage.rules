rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Organization-specific files (logos, stamps, etc.)
    // For now, allow any authenticated user to access organization files
    // In a production environment, you might want more sophisticated rules
    match /organizations/{organizationId}/{allPaths=**} {
      allow read, write: if isAuthenticated();
    }

    // Public files (if needed)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}