rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the organization
    function isOrganizationOwner(organizationId) {
      return isAuthenticated() && request.auth.uid == organizationId;
    }

    // Organization-specific files (logos, stamps, etc.)
    match /organizations/{organizationId}/{allPaths=**} {
      allow read, write: if isOrganizationOwner(organizationId);
    }

    // Public files (if needed)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}