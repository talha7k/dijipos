rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the tenant
    function isTenantOwner(tenantId) {
      return isAuthenticated() && request.auth.uid == tenantId;
    }

    // Tenants collection - users can only read/write their own tenant
    match /tenants/{tenantId} {
      allow read, write: if isTenantOwner(tenantId);
    }

    // Subcollections under tenants - only tenant owners can access
    match /tenants/{tenantId}/{collection=**} {
      allow read, write: if isTenantOwner(tenantId);
    }
  }
}