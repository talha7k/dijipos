rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the organization
    function isTenantOwner(organizationId) {
      return isAuthenticated() && request.auth.uid == organizationId;
    }

    // Tenants collection - users can only read/write their own organization
    match /tenants/{organizationId} {
      allow read, write: if isTenantOwner(organizationId);
    }

    // Subcollections under tenants - only organization owners can access
    match /tenants/{organizationId}/{collection=**} {
      allow read, write: if isTenantOwner(organizationId);
    }
  }
}